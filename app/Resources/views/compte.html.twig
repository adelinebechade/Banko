{# app/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
 
    <title>{% block title %}Banko{% endblock %}</title>
 
    {% block stylesheets %}
      <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}" type="text/css" />
      <link rel="stylesheet" href="{{ asset('bootstrap-editable/css/bootstrap-editable.css') }}" type="text/css" >
      <link rel="stylesheet" href="{{ asset('themes/lib/datetimepicker/css/datetimepicker.css') }}" type="text/css"/>
    {% endblock %}
  </head>

  <body>
    {% block javascripts %}
      {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
      <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
      <script>window.jQuery || document.write('<script src="{{ asset('js/jquery.js') }}"><\/script>')</script>
      <script type="text/javascript" src="{{ asset('js/bootstrap.js') }}"></script>
      <script type="text/javascript" src="{{ asset('bootstrap-editable/js/bootstrap-editable.js') }}"></script>
      <script src="{{ asset('themes/lib/datetimepicker/js/bootstrap-datetimepicker.min.js') }}"></script>
    {% endblock %}
    <div class="container">
      <div id="header" class="hero-unit">
        <h1>Banko</h1>
        <div class="post">
            <a href="{{ path('sonata_admin_dashboard') }}"><img src="{{asset('img/console-tool.png')}}" alt="Administration"/></a>
        </div>
      </div>
 
      <div class="row">
        <div id="content" class="span9">
          {% block body %}
          {% endblock %}
        </div>
      </div>
 
      <hr>
 
      <footer>
        <p>Symfony2 © 2013</p>
      </footer>
    </div>
  </body>
</html>
